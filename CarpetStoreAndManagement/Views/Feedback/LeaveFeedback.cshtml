@using CarpetStoreAndManagement.ViewModels.FeedbackViewModels
@model FeedbackViewModel

@{
    ViewBag.Title = "Leave feedback";
}

<h1 class="text-center" >Leave feedback</h1>
<hr>
<div class="container py-4">
    <form asp-action="SubmitFeedback">
        <div class="mb-3">
            <label class="form-label" for="name">Full Name</label>
            <input asp-for="@Model.FullName" class="form-control"/>
            <span asp-validation-for="FullName" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label class="form-label" for="emailAddress">Email Address</label>
            <input asp-for="@Model.Email" class="form-control"/>
            <span asp-validation-for="Email" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label class="form-label" for="message">Message</label>
            <textarea asp-for="@Model.Message" class="form-control" type="text" style="height: 10rem;"></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>

        </div>
        <div class="d-grid">
            <button class="btn btn-primary btn-lg" id="submitButton" type="submit">Submit</button>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}