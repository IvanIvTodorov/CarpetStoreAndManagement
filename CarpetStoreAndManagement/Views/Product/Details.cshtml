@using CarpetStoreAndManagement.ViewModels.ProductViewModels
@model ProductDetailsViewModel
@{
    ViewData["Title"] = "Details";
}
<body>

    <div class="container">
        <div class="card">
            <div class="container-fliud">
                <div class="wrapper row">
                    <div class="preview col-md-6">
                        <div class="preview-pic tab-content">
                            <div class="tab-pane active" id="pic-1"><img src="@Model.ImgUrl" /></div>
                        </div>
                    </div>
                    <div class="details col-md-6">
                        <h3 class="product-title">Name: @Model.Name</h3>
                        <h3 class="product-description">Type: @Model.Type</h3>
                        <h4 class="price">Current price: <span>$ @Model.Price</span></h4>
                        <h5 class="price">
                            Color:
                            @foreach (var item in Model.Colors)
                            {
                                <span>@item.Color.Name</span>
                            }
                        </h5>
                        <div class="action">
                            <a class="btn btn-dark my-2" asp-action="AddToCart" asp-route-productId="@Model.Id" role="button">Add to cart</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
