@using CarpetStoreAndManagement.ViewModels.RawMaterialViewModels
@model AddRawMaterialViewModel

@if (TempData["message"] != null)
{
    <script>alert('@TempData["message"]');</script>
}

<div class="container mb-4">
    <div class="row">
        <div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-4 mt-4">
            <div class="card shadow">
                <div class="card-body text-center">
                    <h3 class="card-title display-5">Warp</h3>
                    <a href="#">
                        <img class="card-img-top" src="https://m.media-amazon.com/images/I/71FroNsHUBL.jpg" style="width: 150px; height: 150px;">
                    </a>
                    <form asp-action="Order" asp-route-type="Warp" method="post">
                        <div class="row form-gru">
                            <h2 class="card-title display-10">Color</h2>
                            <select asp-for="@Model.Color" class="form-control">
                                @foreach (var color in Model.Colors)
                                {
                                    <option value="@color.Name">@color.Name</option>
                                }
                            </select>
                            <h2 class="card-title display-10">Quantity</h2>
                            <input asp-for="@Model.Quantity" class="form-control" aria-required="true" />
                            <h2 class="card-title display-10">Inventory</h2>
                            <select asp-for="@Model.InventoryName" class="form-control">
                                @foreach (var inventory in Model.Inventories)
                                {
                                    <option value="@inventory.Name">@inventory.Name</option>
                                }
                            </select>
                        </div>
                        <button class="btn btn-dark my-2 pull-center" type="submit">Order</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-4 mt-4">
