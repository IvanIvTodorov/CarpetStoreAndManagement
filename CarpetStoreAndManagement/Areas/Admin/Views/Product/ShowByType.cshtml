@using CarpetStoreAndManagement.ViewModels.ProductViewModels
@model IEnumerable<ShowAllProductsViewModel>


@if (TempData["message"] != null)
{
    <script>alert('@TempData["message"]');</script>
}

@if (Model.FirstOrDefault() != null && (Model.FirstOrDefault().Type == "Carpet"))
{
    ViewBag.Title = "Carpets";
}else if (Model.FirstOrDefault() != null && (Model.FirstOrDefault().Type == "Path"))
{
    ViewBag.Title = "Paths";
        
}

<h1 class="text-center">@ViewBag.Title</h1>
<hr>
<div class="container mb-4">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-4 mt-4">
                <div class="card shadow">
                    <div class="card-body text-center">
                        <a href="#">
                            <img class="card-img-top" src="@item.ImgUrl" style="width: 250px; height: 250px;">
                        </a>
                        <a class="text-reset"><h3 class="card-title display-4">@item.Name</h3></a>
                        <a class="btn btn-dark my-2" asp-action="DeleteProduct" asp-route-productId="@item.Id" role="button">Delete Product</a>
                        <a class="btn btn-warning my-2" asp-action="EditPage" asp-route-productId="@item.Id" role="button">Edit</a>
                        <a class="btn btn-dark my-2" asp-action="Details" asp-route-productId="@item.Id" role="button">Product Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>